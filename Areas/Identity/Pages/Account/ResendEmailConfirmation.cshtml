@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "ارسال مجدد ایمیل تایید";
}
<br />
<div class="row justify-content-center mt-4">
    <div class="col-md-5">
        <h3>@ViewData["Title"]</h3>
        <h5>ایمیل را وارد کنید</h5>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary my-3">ارسال مجدد</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
