@model Shortcutt.ViewModels.CreatePost
@{
    ViewData["Title"] = "ارسال آگهی";
}
<main>
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/images/icon.png" alt="" width="64" height="64">
        <h2>ارسال آگهی</h2>
        <p class="lead">بعد از پر کردن فرم دکمه ادامه را بزنید.</p>
    </div>
    <div class="row g-5 justify-content-center">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">اطلاعات آگهی</h4>
            <form class="needs-validation" asp-action="create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-12">
                    <label for="email" class="form-label">عنوان<span class="text-muted"></span></label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="you@example.com">
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-sm-12">
                        <label for="lastName" class="form-label">متن آگهی</label>
                        <textarea class="form-control" asp-for="Description" rows="6" placeholder="متن آگهی" required></textarea>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="email" class="form-label">موقعیت مکانی</label>
                        <input type="text" class="form-control" asp-for="Location" placeholder="you@example.com">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <input class="form-control" type="file" asp-for="Image">
                    </div>
                </div>

                <hr class="my-4">

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="same-address">
                    <label class="form-check-label" for="same-address">قوانین را مطالعه و موافقم.</label>
                </div>
                <hr class="my-4">
                <div class="col-12 mb-3 text-center">
                    <button class="w-50 btn btn-primary btn-lg" type="submit">ادامه</button>
                </div>
            </form>
        </div>
    </div>
</main>